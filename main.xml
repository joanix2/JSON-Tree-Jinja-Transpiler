<project>
    <directory name="generated-appolo-api">
        <appolo-api framwork="appolo">
            <model name="User">
                <field name="id" type="id" default= "autoincrement()">1 + 1</field>
                <field name="name" type="string" />
                <field name="email" type="string" unique="false"/>
                <field name="links" type="List[Link]" />
            </model>
            <model name="Link">
                <field name="id" type="id" default= "autoincrement()"/>
                <field name="description" type="string" />
                <field name="url" type="string" />
                <field name="postedBy" type="User" default= "now()"/>
            </model>
        </appolo-api>
    </directory>
</project>
