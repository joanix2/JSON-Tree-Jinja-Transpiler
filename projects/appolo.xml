<project>
    <directory>
        <appolo>
            <model name="User">
                <field name="id" type="id" />
                <field name="name" type="string" />
                <field name="email" type="string" />
                <field name="links" type="[Link]" />
            </model>
            <model name="Link">
                <field name="id" type="id" />
                <field name="description" type="string" />
                <field name="url" type="string" />
                <field name="postedBy" type="User" />
            </model>
        </appolo>
    </directory>
</project>
